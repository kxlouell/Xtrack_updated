<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="150dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/buttonuser"
        android:scaleType="fitXY"
        android:id="@+id/user_tp"
        />
    <ImageView
        android:id="@+id/tp_previous"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_previous"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_tp"
        app:layout_constraintLeft_toLeftOf="@+id/user_tp"
        app:layout_constraintRight_toRightOf="@+id/user_tp"
        android:text="Name"
        android:textSize="20sp"
        android:fontFamily="@font/rubik_bold"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/tp_user_name"/>

    <TextView
        android:id="@+id/tp_STATUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/user_tp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:text="HOST"
        android:textSize="30sp"
        android:fontFamily="@font/rubik_bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>